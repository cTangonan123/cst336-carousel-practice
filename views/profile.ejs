<%- include('./partials/header.ejs') %>
<body>
  <%- include('./partials/nav.ejs') %>
  <div class="container-fluid">
    <div class="row justify-content-center align-items-center">
      <div class="col col-12 text-center">
        <h1>
          Update Profile
        </h1>
      </div>
    </div>
    <div class="row justify-content-center align-items-center">
      <div class="col col-6 col-md-4">
        <label for="username">username:</label>
        <div class="input-group mb-3">
          <input
            type="text"
            class="form-control"
            placeholder="something"
            aria-label="Button"
            aria-describedby=""
            name="username"
            value="" 
            disabled
          />
          <button class="btn btn-outline-secondary" type="button" id="" disabled>
            Update
          </button>
        </div>
      </div>
      <div class="col col-6 col-md-4">
        <label for="password">password:</label>
        <div class="input-group mb-3">
          <input
            type="password"
            class="form-control"
            placeholder="something"
            aria-label="Button"
            aria-describedby=""
            name="password"
          />
          <label for=""></label>
          <button class="btn btn-outline-secondary" type="button" id="">
            Update
          </button>
        </div>
      </div>
  </div>
  <hr />
  <div class="container">
    <div class="row justify-content-center align-items-center">
      <div class="col col-12 text-center">
        <h1>
          Manage Reviews
        </h1>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row justify-content-center">
        <%for(let i=0; i<results.length; i++){%>
        <div class="col col-12 col-xl-9">
          <div class="card mb-3" >
            <div class="row g-0">
              <div class="col col-4 col-md-3 col-lg-2">
                <img
                  src="https://image.tmdb.org/t/p/w1280<%=results[i].poster_path%>"
                  class="img-fluid rounded-start card-img align-middle"
                  alt="movie poster of <%=results[i].title%>"
                  style="max-width:100%"
                />
              </div>
              <div class="col col-8 col-md-9 col-lg-10 h-100">
                <div class="card-body h-100">
                  <h5 class="card-title"><%=results[i].reviews_title%></h5>
                  <p class="card-text overflow-auto h-100">
                    <%=results[i].review%>
                  </p>
                  
                  <p class="card-text w-100 h-100 mb-auto">
                    <small class="text-muted"
                      >for the movie <cite><%=results[i].title%></cite></small
                    >
                  </p>
                  <div class="row align-self-end align-items-end mt-auto mb-0 justify-content-end w-100 me-1">
                    <button class="btn btn-outline-secondary col col-5 col-md-3 me-1" type="button">
                      Update
                    </button>
                    <button class="btn btn-outline-danger col col-5 col-md-3 me-1" type="button">
                      Delete
                    </button>
                  </div>
                </div>
                
              </div>
            </div>
          </div>
          
          
        </div>
        <%}%>



  </div>
  
</body>
</html>